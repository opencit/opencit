MTWILSON_CONF=/opt/mtwilson/configuration
MTWILSON_JAVA=/opt/mtwilson/java

MTWILSON_LOGFILE=/opt/mtwilson/log/mtwilson.log
MTWILSON_PIDFILE=/opt/mtwilson/mtwilson.pid

