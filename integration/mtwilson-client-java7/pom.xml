                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-shade-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>regular-jar-with-dependencies</id>
                                <phase>package</phase>
                                <goals>
